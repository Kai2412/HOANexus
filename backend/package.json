{
  "name": "hoa-nexus-backend",
  "version": "1.0.0",
  "description": "HOA CRM Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "azurite": "azurite --silent --location ./azurite-data --debug ./azurite-data/debug.log",
    "chromadb": "docker run -d --name chromadb -p 8000:8000 -e IS_PERSISTENT=TRUE -v ./chroma-data:/chroma/chroma chromadb/chroma:latest",
    "chromadb:stop": "docker stop chromadb && docker rm chromadb",
    "index-documents": "node src/scripts/indexDocuments.js",
    "verify-setup": "node scripts/verify-setup.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@azure/storage-blob": "^12.17.0",
    "azurite": "^3.30.0",
    "bcryptjs": "^2.4.3",
    "chromadb": "^3.1.6",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^10.0.1",
    "multer": "^2.0.2",
    "openai": "^6.9.1",
    "pdfjs-dist": "^5.4.449",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "hoa",
    "crm",
    "property-management"
  ],
  "author": "HOA Nexus Team",
  "license": "MIT"
}
